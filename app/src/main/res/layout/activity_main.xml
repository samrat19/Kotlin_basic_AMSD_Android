<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
android:background="#6A9DE2">

    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/edit1"
    android:inputType="number"
    android:hint="123"
              android:textColor="#FAF9F9"
    android:textSize="40sp"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit2"
            android:textSize="40sp"
            android:hint="456"
            android:textColor="#FDF4F4"
            android:inputType="number"
            android:layout_below="@id/edit1"/>
    <Button
            android:text="+"
            android:textColor="#E8EEEE"
            android:textSize="50sp"
            android:background="#F10606"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:layout_marginTop="168dp"
            android:layout_marginLeft="33dp"
            android:layout_below="@id/edit2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="33dp"
            android:layout_alignParentLeft="true"/>
    <Button
            android:text="-"
            android:textColor="#E8EEEE"
            android:textSize="50sp"
            android:background="#0245E9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button1"
            android:layout_toRightOf="@id/button"
            android:layout_marginTop="170dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="100dp"
            android:layout_below="@id/edit2"/>
    <Button
            android:text="X"
            android:textColor="#E8EEEE"
            android:textSize="40sp"
            android:background="#FFDF03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="33dp"
            android:layout_below="@id/button1"
            android:layout_alignParentStart="true"
            android:layout_marginStart="33dp"
            android:layout_alignParentLeft="true"/>
    <Button
            android:text="/"
            android:textColor="#E8EEEE"
            android:textSize="50sp"
            android:background="#2BFF05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:layout_toRightOf="@id/button2"
            android:layout_marginTop="271dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="100dp"
            android:layout_below="@id/edit2"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check answer Here"
            android:textSize="40sp"
            android:id="@+id/result"
            android:textAlignment="center"
            android:textColor="#F0F3F5"
            android:background="#3941BB"
            android:layout_marginTop="160dp"/>

</RelativeLayout>